{
    "manifest_version": 2,
    "name": "HDownloder",
    "version": "2.0.0",
    "description": "Allow to DL torrent directly from website list.",
    "homepage_url": "https://github.com/Eysus/hdownloader-firefox",
    "permissions": [
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "https://sukebei.nyaa.si/*"
      ],
    "background": {
        "scripts": ["js/core/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.nhentai.net/*",
                "*://*.e-hentai.org/*",
                "*://*.exhentai.org/*",
                "*://*.jav.guru/*",
                "*://hanime.tv/*",
                "*://www.javlibrary.com/*"
            ],
            "js": [
                "js/core/utils.js",
                "js/core/nyaa.js",
                "js/core/dombuilder.js",
                "js/client/nhentai.js",
                "js/client/egallery.js",
                "js/client/javguru.js",
                "js/client/hanimetv.js",
                "js/client/javlibrary.js"
            ],
            "css": [
                "css/default.css",
                "css/javguru.css",
                "css/nhentai.css"
            ]
        }
    ]
}