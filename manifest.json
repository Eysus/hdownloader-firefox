{
    "manifest_version": 2,
    "name": "HDownloder",
    "version": "0.2",
    "description": "Allow to DL torrent directly from website list.",
    "homepage_url": "https://github.com/Eysus/hdownloader-firefox",
    "permissions": [
        "activeTab"
      ],
    "content_scripts": [
        {
            "matches": [
                "*://*.nhentai.net/*",
                "*://*.jav.guru/*"
            ],
            "js": [
                "js/nhentai.js",
                "js/javguru.js"
            ],
            "css": [
                "css/default.css",
                "css/javguru.css",
                "css/nhentai.css"
            ]
        
        }
    ]
}